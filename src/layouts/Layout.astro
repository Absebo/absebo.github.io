---
import Headline from "../components/Headline.astro";
import IconLink from "../components/IconLink.astro";
import GithubIcon from "../components/GithubIcon.astro";
const { headline } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>{headline}</title>
        <base href="/" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta
            name="description"
            content="List of public projects made by Absebo. Including the Hytale share code inspector to decode the Hytale share code"
        />
        <link rel="icon" type="image/x-icon" href="favicon.ico" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon-180.png"
        />
    </head>
    <body>
        <header>
            <nav>
                <IconLink href="/">üè†</IconLink>
                <IconLink
                    href="https://github.com/Absebo/absebo.github.io"
                    target="_blank"
                >
                    <GithubIcon alt="GitHub project" invert />
                </IconLink>
            </nav>
            <Headline class="headline">
                {headline}
            </Headline>
            <div class="spacer"></div>
        </header>
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    header {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

    nav {
        display: flex;
        flex-wrap: nowrap;
        gap: 0.5rem;
        align-content: start;
    }

    .headline {
        font-size: 2.75rem;
        margin: auto;
        padding: 1rem;
    }

    .spacer {
        width: 6.5rem;
    }

    :root {
        --primary-color: #7929c4;
        --secondary-color: #948dff;
        --primary-color-contrast: white;
        --secondary-color-contrast: white;
    }

    body {
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
            Ubuntu, Cantarell, "Helvetica Neue", Arial, sans-serif;
    }

    main {
        max-width: 30rem;
        margin: auto;
    }
</style>
