---
const props = Astro.props;
---

<button {...props}><slot /></button>

<style>
    button {
        border: 0;
        background: linear-gradient(
            -15deg,
            var(--secondary-color),
            var(--primary-color)
        );
        color: var(--primary-color-contrast);
        padding: 0.5rem;
        border-radius: 0.5rem;
        cursor: pointer;
    }

    button:disabled {
        background: lightgray;
        border: 0;
        cursor: unset;
    }
</style>
