---
const props = Astro.props;
const rel = props.href.startsWith("http") ? "noopener noreferrer" : "";
---

<a rel={rel} {...props}><slot /></a>
<style>
    a {
        background: linear-gradient(
            -15deg,
            var(--secondary-color),
            var(--primary-color)
        );
        color: var(--primary-color-contrast);
        padding: 0.5rem;
        border-radius: 0.5rem;
        font-size: 1.5rem;
        text-decoration: none;
        position: relative;
        width: 2rem;
        height: 2rem;
    }
</style>
