---
const props = Astro.props;
const rel = props.href.startsWith("http") ? "noopener noreferrer" : "";
---

<li>
    <a rel={rel} {...props}>
        <slot />
    </a>
</li>

<style>
    a {
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
            Ubuntu, Cantarell, "Helvetica Neue", Arial, sans-serif;
        color: var(--primary-color);
        font-weight: 500;
        text-decoration: none;
        position: relative;
        transition: color 0.2s ease;
        display: inline-flex;
        gap: 0.5rem;
        align-items: center;
    }

    a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -2px;
        width: 100%;
        height: 2px;
        background: var(--primary-color);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.25s ease;
    }

    a:hover {
        color: var(--primary-color);
    }

    a:hover::after {
        transform: scaleX(1);
    }
</style>
